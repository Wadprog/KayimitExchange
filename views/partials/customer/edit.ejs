<form class="form-horizontal" method="POST" <% if(customer._id){ %>
  action="/customers/<%=customer._id%>?_method=PUT" <% }else{ %>
  action="/customers" <% } %> >
  <!-- Customer's name -->
  <div class="form-group row">
    <label for="f-name" class="col-sm-2 col-form-label">First Name</label>
    <div class="col-sm-10">
      <input id="f-name" class="form-control" placeholder="First Name "
      value="<%= customer._id?customer.firstName:""%>"
      name="customer[firstName]" />
    </div>
  </div>
  <!-- Customer's Middle Name -->
  <div class="form-group row">
    <label for="m-name" class="col-sm-2 col-form-label">Middle Name</label>
    <div class="col-sm-10">
      <input value="<%=customer._id?customer.middleName:""%>"
      name="customer[middleName]" id="m-name" class="form-control"
      placeholder="Middle Name" />
    </div>
  </div>
  <!-- Customer's Last name  -->
  <div class="form-group row">
    <label for="l-name" class="col-sm-2 col-form-label">Last Name</label>
    <div class="col-sm-10">
      <input for="l-name" class="form-control" placeholder="Name"
      value="<%=customer._id?customer.lastName:""%>" name="customer[lastName]"
      />
    </div>
  </div>
  <!-- Customer's Home phone  -->
  <div class="form-group row">
    <label for="f-num" class="col-sm-2 col-form-label">Phone Number</label>
    <div class="col-sm-10">
      <input class="form-control" id="f-num" placeholder="Phone Number"
      value="<%=customer._id?customer.homeTelephone:""%>" name="customer[phone]"
      />
    </div>
  </div>
  <!-- Customer's Home phone  -->
  <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input class="form-control" for="email" placeholder="Email"
      value="<%=customer._id?customer.email:""%>" name="customer[email]" />
    </div>
  </div>
  <!-- customer's birthDate -->
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">Birth Date</label>
    <div class="col-sm-10">
      <%var date= customer._id?new Date(customer.birthDate):new Date()%> <% var
      fullYear=`${date.getFullYear()}`%> <% var month
      =`${date.getMonth()>9?+date.getMonth()+1:'0'+(+date.getMonth()+1)}` %>
      <%var day =`${date.getDate()>10?date.getDate():'0'+date.getDate()}`%>

      <input
        type="date"
        class="form-control"
        id="inputName"
        placeholder="Birth date "
        value="<%=`${fullYear}-${month}-${day}`%>"
        name="customer[birthDate]"
      />
    </div>
  </div>
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label"
      >Social security</label
    >
    <div class="col-sm-10">
      <input class="form-control" id="inputName" placeholder="Social security "
      value="<%=customer._id?customer.socialSecurity:""%>"
      name="customer[socialSecurity]" />
    </div>
  </div>
  <div class="form-group row">
    <label for="address" class="col-sm-2 col-form-label">Address </label>
    <div class="col-sm-10">
      <input class="form-control" id="address" placeholder="Name"
      value="<%=customer._id?customer.address:""%>" name="customer[address]" />
    </div>
  </div>
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">state</label>
    <div class="col-sm-10">
      <input class="form-control" id="inputName" placeholder="Name"
      value="<%=customer._id?customer.state:""%>" name="customer[state]" />
    </div>
  </div>
  <div class="form-group row">
    <label for="inputName2" class="col-sm-2 col-form-label">City</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputName2" placeholder="Name"
      value="<%=customer._id?customer.city:""%>" name="customer[city]" />
    </div>
  </div>
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">Zip</label>
    <div class="col-sm-10">
      <input class="form-control" id="inputName" placeholder="Name"
      value="<%=customer._id?customer.zip:""%>" name="customer[zip]" />
    </div>
  </div>
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">Country</label>
    <div class="col-sm-10">
      <input class="form-control" id="inputName" placeholder="Name"
      value="<%=customer._id?customer.country:""%>" name="customer[country]" />
    </div>
  </div>
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label"
      >Reason why to repair credit</label
    >
    <div class="col-sm-10">
      <textarea
        class="form-control"
        id="inputName"
        placeholder="I want to repair my credit because ..."
        name="customer[repairReason]"
      >
<%=customer._id?customer.repairReason:""%></textarea
      >
    </div>
  </div>
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">
      Membership Plan
    </label>

    <div class="col-sm-10">
      <div class="form-check form-check-inline">
        <input <%=customer.membershipPlan=="gold"?"checked":""%>
        class="form-check-input" type="radio" name="customer[membershipPlan]"
        id="membership-gold" value="gold" />
        <label class="form-check-label" for="membership-gold"> Gold </label>
      </div>
      <div class="form-check form-check-inline">
        <input <%=customer.membershipPlan=="black"?"checked":""%>
        class="form-check-input" type="radio" name="customer[membershipPlan]"
        id="menbership-black" value="black" />
        <label class="form-check-label" for="menbership-black"> Black </label>
      </div>
    </div>
  </div>
  <button
    class="btn btn-<%=customer._id?'warning':'primary'%> btn-sm text-white text-bold"
    type="submit"
  >
    <%=customer._id?"update":"Create"%>
  </button>
</form>
